@using CarPartShop.Areas.Admin.ViewModels.Blog
@model List<ListItemViewModel>

<div class="">
    <a asp-route="admin-blog-add" target="_blank" class="btn btn-secondary">Add new Blog</a>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Blogs</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>From</th>



                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>@blog.Title</td>
                                <td>@blog.From</td>


                                <td class="text-end">
                                    <a asp-route="admin-blog-update" asp-route-id="@blog.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form class="d-none" method="POST" asp-route="admin-blog-delete" asp-route-id="@blog.Id" id="update-@blog.Id">
                                    </form>

                                    <button type="submit" form="update-@blog.Id"><i class="las la-trash-alt text-secondary font-16"></i></button>
                                    <a class="btn btn-primary" asp-route="admin-blogimage-list" asp-route-productId="@blog.Id">Blog Image List</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>